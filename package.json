{
  "name": "srishti-farm",
  "version": "1.0.0",
  "description": "Full-stack web application for Srishti - The Farm retreat",
  "main": "server/index.js",
  "scripts": {
    "start": "node server/index.js",
    "server": "nodemon server/index.js",
    "client": "npm start --prefix client",
    "client:build": "npm run build --prefix client",
    "client:install": "npm install --prefix client",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "build": "npm install && npm run client:build",
    "render-postbuild": "npm install && npm run client:build",
    "heroku-postbuild": "npm run build",
    "test": "echo \"No tests configured\" && exit 0"
  },
  "dependencies": {
    "axios": "^1.4.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "http-proxy-middleware": "^3.0.5",
    "pg": "^8.11.0",
    "pg-hstore": "^2.3.4"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.2"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "keywords": [
    "farm",
    "retreat",
    "booking",
    "fullstack",
    "react",
    "nodejs"
  ],
  "author": "Srishti The Farm",
  "license": "UNLICENSED"
}
